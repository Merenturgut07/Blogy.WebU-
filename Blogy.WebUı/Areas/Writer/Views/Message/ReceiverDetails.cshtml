@model WriterMessage
@{
	ViewData["Title"] = "ReceiverDetails";
	Layout = "~/Areas/Writer/Views/WriterLayout/Index.cshtml";
}

<div class="page-header">
	<div class="main-panel">
		<div class="col-lg-12 grid-margin stretch-card">
			<div class="card">
				<div class="card-body">
					<h4 class="card-title"> Mesajların Detayları </h4>
					<br />
					<form class="form-group">
						@Html.HiddenFor(x => x.WriterMessageId, new { @class = "form-control" })
						<br />
						@Html.Label("Gönderen Adı")
						@Html.TextBoxFor(x => x.SenderName, new { @class = "form-control" })
						<br />
						@Html.Label("Gönderen Mail")
						@Html.TextBoxFor(x => x.Sender, new { @class = "form-control" })
						<br />
						@Html.Label("Mesaj")
						@Html.TextAreaFor(x => x.MessageContent, 10, 2, new { @class = "form-control" })
						<br />

					</form>
				</div>
			</div>
		</div>
	</div>
</div>