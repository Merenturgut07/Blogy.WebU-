@model List<ToDoList>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="row">
	<div class="col">
		<div class="card bg-default shadow">
			<div class="card-header bg-transparent border-0">
				<h3 class="text-white mb-0">Yapılacaklar Listesi</h3>
			</div>
			<div class="table-responsive">
				<table class="table align-items-center table-dark table-flush">
					<thead class="thead-dark">
						<tr>
							<th scope="col" class="sort" data-sort="name">ID</th>
							<th scope="col" class="sort" data-sort="status">Açıklama</th>
							<th scope="col" class="sort" data-sort="status">Yayınlanma Tarih</th>
							<th scope="col" class="sort" data-sort="status">Sil</th>
							<th scope="col" class="sort" data-sort="status">Güncelle</th>

						</tr>
					</thead>
					<tbody class="list">
						@foreach (var item in Model)
						{
							<tr>
								<td>@item.ToDoListId </td>
								<td>@item.Description </td>
								<td>@DateTime.Parse(item.Date).ToString("dd-MMMM-yyyy")</td>
								<td><a href="/Admin/AdminToDoList/DeleteToDoList/@item.ToDoListId" class="btn btn-danger">Sil</a> </td>
								<td><a href="/Admin/AdminToDoList/UpdateToDoList/@item.ToDoListId" class="btn btn-success">Güncelle</a> </td>
							</tr>
						}

					</tbody>
				</table>
				<br />
				<a href="/Admin/AdminToDoList/CreateToDoList/" class="btn btn-info">Yeni Liste Ekle</a>
			</div>
		</div>
	</div>
</div>

