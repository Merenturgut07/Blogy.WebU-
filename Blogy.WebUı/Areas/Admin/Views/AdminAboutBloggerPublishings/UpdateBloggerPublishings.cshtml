@model BlogAboutBloggerPublishing
@{
    ViewData["Title"] = "UpdateBloggerPublishings";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="card-header border-0">
	<h3 class="mb-0">Bloger Yayıncılık  Güncelleme İşlemi</h3>
</div>
<br />
<form class="form-group" method="post">
	<input type="hidden" asp-for="Id" /> 
	<br />
	<label> İcon</label>
	<input type="text" asp-for="Icon" class="form-control" />
	<br />
	<label> Başlık</label>
	<input type="text" asp-for="Title" class="form-control" />
	<br />
	<label>Açıklama </label>
	@Html.TextAreaFor(x => x.Description, 8, 2, new { @class = "form-control" })
	<br />
	<button class="btn btn-primary"> Kaydet </button>
</form>

