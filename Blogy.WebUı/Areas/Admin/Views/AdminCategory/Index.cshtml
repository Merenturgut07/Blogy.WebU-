@model List<Category>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Categori Listesi</h4>

            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Categoriler</th>
                            <th>Sil</th>
                            <th>Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
						@foreach (var item in Model)
						{
							<tr>
								<td>@item.CategoryId </td>
								<td>
									<span class="badge badge-dot mr-4">
										<i class="bg-warning"></i>
										<span class="status">@item.CategoryName</span>
									</span>
								</td>
								<td><a href="/Admin/AdminCategory/CategoryDelete/@item.CategoryId" class="btn btn-danger">Sil</a> </td>
								<td><a href="/Admin/AdminCategory/CategoryUpdate/@item.CategoryId" class="btn btn-success">Güncelle</a> </td>
							</tr>
						}


                    </tbody>
                </table>
				<a href="/Admin/AdminCategory/CategoryAdd/" class="btn btn-info">Yeni Kategori Ekle</a>
            </div>
        </div>
    </div>
</div>

