@model List<Comment>


<div class="pt-5 comment-wrap">
	<h3 class="mb-5 heading">@Model.Count Yorum</h3>
	<ul class="comment-list">

		@foreach (var item in Model)
		{
			<li class="comment">
				<div class="vcard">
					<img src="@item.ImageUrl" alt="Image placeholder">
				</div>
				<div class="comment-body">
					<h3>@item.NameSurname </h3>
					<div class="meta">@item.CommentDate.ToString("dd-MMM-yyyy")</div>
					<p>@item.Content</p>
				</div>
			</li>
		}
		

	</ul>
	<!-- END comment-list -->
	@await Component.InvokeAsync("_BlogDetailAddCommentComponentPartial", new { id = ViewBag.i })

</div>