@model List<BlogAboutPictureOrDescription>


	@foreach (var item in Model)
{
	<div class="section sec-halfs py-0">
		<div class="container">
			<div class="half-content d-lg-flex align-items-stretch">
				<div class="img" style="background-image: url('@item.Picture')" data-aos="fade-in" data-aos-delay="100">
				</div>
				<div class="text">
					<h2 class="heading text-primary mb-3">Yapımcılar ve yaratıcılar için kaynaklar</h2>
					<p class="mb-4">
						@item.Description
					</p>

				</div>
			</div>

			<div class="half-content d-lg-flex align-items-stretch">
				<div class="img order-md-2" style="background-image: url('@item.Picture1')" data-aos="fade-in">
				</div>
				<div class="text">
					<h2 class="heading text-primary mb-3">5.000'den fazla müşterimiz bize güveniyor</h2>
					<p class="mb-4">
						@item.Description1
					</p>

				</div>
			</div>
		</div>
	</div>
}

