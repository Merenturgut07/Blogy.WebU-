@model List<BlogAboutService>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Hizmetler Tablosu</h4>

            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Başlık</th>
                            <th>Açıklama</th>
                            <th>Icon</th>
                            <th>Sil</th>
                            <th>Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Title</td>
                                <td>@item.Description.Substring(0,25)</td>
                                <td>@item.Icon</td>
                                <td><a href="/Admin/AdminAboutServices/DeleteService/@item.Id" class="btn btn-danger">Sil</a>  </td>
                                <td><a href="/Admin/AdminAboutServices/UpdateService/@item.Id" class="btn btn-success">Güncelle</a>  </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <br />
                <a href="/Admin/AdminAboutServices/CreateService/" class="btn btn-success">Yeni Servis Ekle</a>
            </div>
        </div>
    </div>
</div>

