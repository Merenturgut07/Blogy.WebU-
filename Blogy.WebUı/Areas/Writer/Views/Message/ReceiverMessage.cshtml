@model List<WriterMessage>

@{
	ViewData["Title"] = "ReceiverMessage";
	Layout = "~/Areas/Writer/Views/WriterLayout/Index.cshtml";
}

<div class="page-header">
	<div class="main-panel">
		<div class="col-lg-12 grid-margin stretch-card">
			<div class="card">
				<div class="card-body">
					<h4 class="card-title">Gelen Mesajlar </h4>
					<br />
					<div class="table-responsive">
						<table class="table table-hover">
							<thead>
								<tr>
									<th>#</th>
									<th>Konu</th>
									<th>Gönderen</th>
									<th>Tarih</th>
									<th>Detaylar</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.WriterMessageId</td>
										<td>@item.Subject</td>
										<td>@item.SenderName</td>
										<td>@(((DateTime)item.Date).ToString("dd-MMM-yyyy"))</td>
										<td><a href="/Writer/Message/ReceiverDetails/@item.WriterMessageId" class="btn btn-outline-success">Mesajı Gör</a> </td>


									</tr>
								}


							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

