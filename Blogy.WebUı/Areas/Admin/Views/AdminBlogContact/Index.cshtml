@model List<BlogSendContact>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Blog Gelen Mesajlar Listesi </h4>
            <p class="card-description"></p>
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th> # </th>
                            <th> İsim Soyisim  </th>
                            <th> Mail </th>
                            <th> Konu  </th>
                            <th> Mesaj Detayı </th>
                            <th> Sil </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td> @item.Id </td>
                                <td> @item.NameSurname </td>
                                <td> @item.Mail </td>
                                <td> @item.Subject </td>
                                <td> <a href="/Admin/AdminBlogContact/DetailsContact/" class="btn btn-primary">Mesajın Detayını Gör</a></td>
                                <td> <a href="/Admin/AdminBlogContact/DeleteContact/@item.Id" class="btn btn-danger">Sil</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

