@model List<Article>

<div class="row">
	<div class="col-xl-12 col-sm-6 grid-margin stretch-card">
		<div class="card">
			<div class="card-body px-0 overflow-auto">
				<h4 class="card-title pl-4">Yazılan Makaleler</h4>

				<div class="table-responsive">
					<table class="table">
						<thead class="bg-light">
							<tr>
								<th>ID</th>
								<th>Görsel</th>
								<th>Başlık</th>
								<th>Oluşturulma Tarihi</th>
								<th>Açıklama</th>

							</tr>
						</thead>
						@foreach (var item in Model)
						{
							<tbody>
								<tr>
									<td> #</td>
									<td><img src="@item.CoverImageUrl" /> </td>
									<td>@item.Title</td>
									<td>@(((DateTime)item.CreatedDate).ToString("dd-MMM-yyyy"))</td>
									<td>@item.Description.Substring(0, 70)...</td>
									
								</tr>
							</tbody>
						}
					</table>
				</div>
			</div>
		</div>
	</div>









</div>