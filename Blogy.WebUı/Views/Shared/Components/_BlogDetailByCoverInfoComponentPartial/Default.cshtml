@model Article 

<div class="site-cover site-cover-sm same-height overlay single-page" style="background-image: url('@Model.CoverImageUrl');">
    <div class="container">
        <div class="row same-height justify-content-center">
            <div class="col-md-6">
                <div class="post-entry text-center">
                    <h1 class="mb-4">@Model.Title</h1>
                    <div class="post-meta align-items-center text-center">
                        <span class="d-inline-block mt-1">@Model.AppUser</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>