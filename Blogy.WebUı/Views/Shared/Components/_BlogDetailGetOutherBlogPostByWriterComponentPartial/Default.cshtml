@model List<Article>

<div class="sidebar-box">
    <h3 class="heading">Yazarın Yazdığı Diğer Blogları</h3>
    <div class="post-entry-sidebar">
        <ul>
            @foreach (var item in Model)
            {
                <li>
                    <a href="">
                        <img src="@item.CoverImageUrl" alt="Image placeholder" class="me-4 rounded" style="height:80px;" width="150px;">
                        <div class="text">
                            <h4>@item.Title</h4>
                            <div class="post-meta">
                                <span class="mr-2">Yazar İsim Soyisim : @item.AppUser.Name @item.AppUser.Surname
                                    <br />
                                    Categorisi : @item.Category.CategoryName </span>
                            </div>
                        </div>
                    </a>
                </li>
            }
            

        </ul>
    </div>
</div>