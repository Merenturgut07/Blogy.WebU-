@model Blogy.EntityLayer.Concrete.Article
@{
    ViewData["Title"] = "EditBlog";
    Layout = "~/Areas/Writer/Views/WriterLayout/Index.cshtml";
}


 <h1>Edit Blog</h1>
<div class="content-wrapper">
	<div class="page-header">
		<h3 class="page-title">Yeni Blog Ekleme İşlemleri</h3>
		<nav aria-label="breadcrumb">
			<ol class="breadcrumb">
				<li class="breadcrumb-item"><a href="#">Blog İşlemleri</a></li>
				<li class="breadcrumb-item active" aria-curret="page">Yeni Blog İşlemleri</li>
			</ol>
		</nav>
	</div>
	<div class="row">
		<div class="col-lg-12 grid-margin stretch-card">
			<div class="card">
				<div class="card-body">
					<h4 class="card-title">Yeni Blog Ekleme Paneli</h4>
					<h1>@ViewBag.id</h1>
					<p class="card-description">
						Aşağıdaki alanları eksiksiz doldurarak blog ekleme işlemlerini  yapabilirsiniz.
					</p>
					<form method="post">

						<label> Blog Başlığı</label>
						<input type="text" asp-for="Title" class="form-control" />
						<br />
						<label> Blog Kategori</label>
						@Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.v, new { @class = "form-control" })
						<br />
						<label> Blog Tarihi</label>
						<input type="text" asp-for="CreatedDate" class="form-control" />
	
						<br />
						<label> Blog Kapak Fotoğraf Yolu</label>
						<input type="text" asp-for="CoverImageUrl" class="form-control" />
						<br />
						<label> Blog Detayları</label>
						<textarea rows="5" class="form-control" asp-for="Description"></textarea>
						<br />
						<label> Yazar Id</label>
						<input type="text" asp-for="WriterId" class="form-control" />
						<br />
						<label> Article Id</label>
						<input type="text" asp-for="AppUserId" class="form-control" />
						<br />
						<button class="btn btn-outline-success">Blogu Güncelle</button>

					</form>
				</div>
			</div>
		</div>
	</div>
</div> 

