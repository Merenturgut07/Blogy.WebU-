@model WriterMessage
@{
	ViewData["Title"] = "SenderMessageDetails";
	Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="page-header">
	<div class="main-panel">
		<div class="col-lg-12 grid-margin stretch-card">
			<div class="card">
				<div class="card-body">
					<h4 class="card-title"> Mesajların Detayları </h4>
					<br />
					<form class="form-group">
						@Html.HiddenFor(x => x.WriterMessageId, new { @class = "form-control" })
						<br />
						@Html.Label("Başlık")
						@Html.TextBoxFor(x => x.Subject, new { @class = "form-control" })
						<br />
						@Html.Label("Gönderen")
						@Html.TextBoxFor(x => x.SenderName, new { @class = "form-control" })
						<br />
						@Html.Label("Alıcı")
						@Html.TextBoxFor(x => x.ReceiverName, new { @class = "form-control" })
						<br />
						@Html.Label("Tarih")
						@Html.TextBoxFor(x => x.Date, new { @class = "form-control" })
						<br />
						@Html.Label("Mesaj")
						@Html.TextBoxFor(x => x.MessageContent, new { @class = "form-control" })
						<br />

						<a asp-action="ReceiverMessageList" class="btn btn-primary mr-2"> Admin Gelen Mesajlar</a>
						<a asp-action="SenderMessageList" class="btn btn-warning mr-2"> Admin Giden Mesajlar</a>
					</form>

				</div>
			</div>
		</div>
	</div>
</div>

