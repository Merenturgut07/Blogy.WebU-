@model BlogAboutPictureOrDescription


@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="card-header border-0">
	<h3 class="mb-0">Açıklama Ve Fotoğraf Güncelleme İşlemi</h3>
</div>
<br />
<form class="forms-sample" method="post">
	@Html.HiddenFor(x => x.Id)
	<label> Görsel  </label>
	<input type="text" asp-for="Picture" class="form-control" />
	<br />
	<label> Görsel 1</label>
	<input type="text" asp-for="Picture1" class="form-control" />
	<br />
	<label> Açıklama </label>
	@Html.TextAreaFor(x => x.Description, 8, 2, new { @class = "form-control" })
	<br />
	<label> Açıklama 1 </label>
	@Html.TextAreaFor(x=>x.Description1,8,2,new {@class="form-control"})
	<br />
	<button class="btn btn-primary"> Kaydet </button>
</form>

